{
  "name": "@witnet/sdk",
  "version": "1.2.0",
  "description": "Typescript library and CLI tooling for Web3 buidlers willing to interact with the Witnet blockchain.",
  "author": "Witnet Foundation",
  "license": "MIT",
  "private": false,
  "type": "module",
  "bin": {
    "witsdk": "src/bin/index.cjs",
    "witnet": "src/bin/index.cjs"
  },
  "files": [
    "dist",
    "src/bin",
    "witnet/witnet.proto.json",
    "witnet/assets",
    ".env_witnet"
  ],
  "exports": {
    ".": {
      "types": "./dist/src/*.d.ts",
      "require": "./dist/src/index.js",
      "default": "./dist/src/index.js"
    },
    "./assets": "./dist/witnet/assets/index.cjs",
    "./utils": {
      "types": "./dist/src/lib/*.d.ts",
      "require": "./dist/src/lib/utils.js",
      "default": "./dist/src/lib/utils.js"
    }
  },
  "types": "./dist",
  "scripts": {
    "build": "pbjs --target json witnet/witnet.proto -o witnet/witnet.proto.json && npm run clean && tsc -p tsconfig.json",
    "clean": "node ./scripts/clean.cjs dist",
    "fmt": "eslint --ext .js,.cjs . --ignore-path .gitignore --ignore-pattern _*",
    "fmt!": "eslint --ext .js,.cjs . --fix --ignore-path .gitignore --ignore-pattern _*",
    "postinstall": "node scripts/postinstall.cjs",
    "prepare": "pnpm run build",
    "witsdk": "cross-env-shell WITNET_SDK_RADON_ASSETS_PATH='../../../witnet/assets' node ./src/bin/index.js"
  },
  "dependencies": {
    "@bitcoinerlab/secp256k1": "^1.2.0",
    "axios": "^1.12.2",
    "bech32": "~2.0.0",
    "bip32": "^5.0.0",
    "cbor": "^10.0.11",
    "dotenv": "^17.2.3",
    "ethers": "^6.15.0",
    "graphql-query-compress": "1.2.4",
    "inquirer": "^12.9.6",
    "json-bigint": "^1.0.0",
    "keccak256": "^1.0.6",
    "lodash.merge": "^4.6.2",
    "long": "^5.3.2",
    "moment": "^2.30.1",
    "promise-poller": "^1.9.1",
    "protobufjs": "^7.5.4",
    "qrcode-terminal": "^0.12.0",
    "secp256k1": "^5.0.1"
  },
  "devDependencies": {
    "@types/cbor": "^5.0.1",
    "@types/json-bigint": "^1.0.4",
    "@types/node": "^24.9.1",
    "@types/promise-poller": "^1.7.4",
    "cross-env": "10.0.0",
    "eslint": "^9.38.0",
    "eslint-config-standard": "^17.1.0",
    "eslint-plugin-import": "^2.32.0",
    "eslint-plugin-n": "^17.23.0",
    "eslint-plugin-promise": "^7.2.1",
    "protobufjs-cli": "^1.1.3",
    "typescript": "^5.9.2"
  }
}
